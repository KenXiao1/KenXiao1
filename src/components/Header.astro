---
import ColorPicker from './ColorPicker.astro';

const links = [
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/photography', label: 'Photography' },
  { href: '/games', label: 'Arcade' },
  { href: '/recommendations', label: 'Reading List' },
];
---

<header class="sticky top-0 z-50 backdrop-blur-md bg-white/70 dark:bg-black/70 border-b border-gray-200 dark:border-gray-800">
  <div class="container mx-auto px-4 h-16 flex items-center justify-between">
    <a href="/" class="text-xl font-serif font-bold tracking-tight hover:text-accent transition-colors">
      Ken Xiao
    </a>

    <nav class="hidden md:flex items-center gap-6">
      {links.map(link => (
        <a href={link.href} class="text-sm font-medium hover:text-accent transition-colors">
          {link.label}
        </a>
      ))}
    </nav>

    <div class="flex items-center gap-4">
      <!-- Visual Theme Selector -->
      <select id="visual-theme-select" class="bg-transparent text-xs border border-gray-300 dark:border-gray-700 rounded px-2 py-1 text-gray-800 dark:text-gray-200 dark:bg-gray-900">
        <option value="cellular-automata">Cellular Automata</option>
        <option value="turbulence">Turbulence</option>
        <option value="differential-equation">Equation</option>
        <option value="saturn">Saturn</option>
        <option value="none">No Background</option>
      </select>

      <!-- Equation Settings Button (hidden by default) -->
      <button id="equation-settings-btn" class="hidden p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-800 transition-colors text-gray-800 dark:text-gray-200" title="Change Equation">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      </button>

      <!-- Saturn Settings Button (hidden by default) -->
      <button id="saturn-settings-btn" class="hidden p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-800 transition-colors text-gray-800 dark:text-gray-200" title="Saturn Settings">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
        </svg>
      </button>

      <!-- Color Picker -->
      <ColorPicker />

      <!-- Dark Mode Toggle -->
      <button id="theme-toggle" class="p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-800 transition-colors text-gray-800 dark:text-gray-200" aria-label="Toggle Dark Mode">
        <!-- Sun icon (shows in dark mode) -->
        <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
        <!-- Moon icon (shows in light mode) -->
        <svg class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path></svg>
      </button>
    </div>
  </div>
</header>

<script>
  // Dark Mode Toggle
  const themeToggle = document.getElementById('theme-toggle');
  themeToggle?.addEventListener('click', () => {
    const element = document.documentElement;
    element.classList.toggle('dark');

    const isDark = element.classList.contains('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });

  // Visual Theme Selector
  const visualSelect = document.getElementById('visual-theme-select') as HTMLSelectElement | null;
  const equationSettingsBtn = document.getElementById('equation-settings-btn');
  const saturnSettingsBtn = document.getElementById('saturn-settings-btn');

  // Function to update settings buttons visibility based on current theme
  function updateSettingsButtonsVisibility(theme: string) {
    // Hide all settings buttons first
    equationSettingsBtn?.classList.add('hidden');
    saturnSettingsBtn?.classList.add('hidden');

    // Show the appropriate button based on theme
    if (theme === 'differential-equation') {
      equationSettingsBtn?.classList.remove('hidden');
    } else if (theme === 'saturn') {
      saturnSettingsBtn?.classList.remove('hidden');
    }
  }

  // Setup button click handlers
  equationSettingsBtn?.addEventListener('click', () => {
    window.dispatchEvent(new Event('equation-modal-open'));
  });

  saturnSettingsBtn?.addEventListener('click', () => {
    window.dispatchEvent(new Event('saturn-settings-open'));
  });

  // Load saved theme on page load
  const savedTheme = localStorage.getItem('visualTheme');
  if (savedTheme && visualSelect) {
    visualSelect.value = savedTheme;
    // Update button visibility for saved theme
    updateSettingsButtonsVisibility(savedTheme);
    // Dispatch theme change event to apply saved theme
    setTimeout(() => {
      window.dispatchEvent(new CustomEvent('theme-change', { detail: { theme: savedTheme } }));
    }, 100);
  }

  visualSelect?.addEventListener('change', (e) => {
    const theme = (e.target as HTMLSelectElement).value;

    // Save theme preference
    localStorage.setItem('visualTheme', theme);

    // Update settings buttons visibility
    updateSettingsButtonsVisibility(theme);

    // Hide/show canvas based on theme
    const canvas = document.getElementById('bg-canvas');
    const canvas3d = document.getElementById('bg-canvas-3d');

    if (theme === 'none') {
      if (canvas) canvas.style.display = 'none';
      if (canvas3d) canvas3d.style.display = 'none';
    } else {
      if (canvas) canvas.style.display = 'block';
      if (canvas3d) canvas3d.style.display = 'block';

      // Open equation modal if equation theme is selected
      if (theme === 'differential-equation') {
        window.dispatchEvent(new Event('equation-modal-open'));
      }

      // Open saturn settings if saturn theme is selected
      if (theme === 'saturn') {
        window.dispatchEvent(new Event('saturn-settings-open'));
      }
    }

    window.dispatchEvent(new CustomEvent('theme-change', { detail: { theme } }));
  });
</script>
