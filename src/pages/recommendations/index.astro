---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const recommendations = await getCollection('recommendations');
const read = recommendations.filter(r => r.data.status === 'read');
const toRead = recommendations.filter(r => r.data.status === 'toread');
---

<BaseLayout title="Ken Xiao | Reading List">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-serif font-bold mb-8">Reading List & Resources</h1>
    
    <div class="mb-12">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <span class="w-3 h-3 rounded-full bg-green-500"></span>
        Read / Recommended
      </h2>
      <div class="grid gap-4">
        {read.map(item => (
          <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-4 rounded-lg flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
            <div>
              <h3 class="font-bold text-lg">
                {item.data.link ? (
                  <a href={item.data.link} target="_blank" class="hover:text-accent underline decoration-dotted">{item.data.title}</a>
                ) : (
                  item.data.title
                )}
              </h3>
              {item.data.notes && <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">{item.data.notes}</p>}
            </div>
            {item.data.link && (
              <a href={item.data.link} target="_blank" class="shrink-0 px-4 py-2 text-xs font-bold border border-gray-300 dark:border-gray-700 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
                Visit Link &rarr;
              </a>
            )}
          </div>
        ))}
        {read.length === 0 && <p class="text-gray-500 italic">No items yet.</p>}
      </div>
    </div>

    <div>
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <span class="w-3 h-3 rounded-full bg-yellow-500"></span>
        To Read / Queue
      </h2>
      <div class="grid gap-4">
        {toRead.map(item => (
          <div class="bg-gray-50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-800 p-4 rounded-lg opacity-80 hover:opacity-100 transition-opacity">
             <h3 class="font-medium">
                {item.data.link ? (
                  <a href={item.data.link} target="_blank" class="hover:text-accent">{item.data.title}</a>
                ) : (
                  item.data.title
                )}
              </h3>
          </div>
        ))}
        {toRead.length === 0 && <p class="text-gray-500 italic">No items yet.</p>}
      </div>
    </div>
  </div>
</BaseLayout>
