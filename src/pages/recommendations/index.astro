---
import BaseLayout from '../../layouts/BaseLayout.astro';
import fs from 'fs';
import path from 'path';

const readingListPath = path.resolve('./public/reading-list.json');
const readingListData = JSON.parse(fs.readFileSync(readingListPath, 'utf-8'));

// Helper to sanitize items for client-side (remove heavy content)
const sanitizeItem = (item: any, category: string) => ({
  name: item.name,
  type: item.type,
  originalName: item.originalName,
  category,
  fileCount: item.files ? item.files.length : 0
});

// Flatten and sanitize data for easier client-side handling
const allItems = [
  ...readingListData.literature.map((item: any) => sanitizeItem(item, 'Literature')),
  ...readingListData.history.map((item: any) => sanitizeItem(item, 'History')),
  ...readingListData.other.map((item: any) => sanitizeItem(item, 'Other'))
];
---

<BaseLayout title="Ken Xiao | Reading List">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" id="reading-list-app" data-items={JSON.stringify(allItems)}>
    
    <!-- Header Section -->
    <div class="relative py-16 text-center overflow-hidden">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-purple-500/20 rounded-full blur-[100px] -z-10 pointer-events-none"></div>
      
      <h1 class="text-5xl md:text-7xl font-serif font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 animate-gradient-x">
        Reading List
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto leading-relaxed">
        A curated collection of literature, history, and resources. <br class="hidden md:block" />
        Explore the library of thoughts and stories.
      </p>
    </div>

    <!-- Controls Section -->
    <div class="sticky top-4 z-30 mb-12 backdrop-blur-xl bg-white/70 dark:bg-gray-900/70 border border-white/20 dark:border-gray-800/50 rounded-2xl shadow-lg p-2 transition-all duration-300">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        
        <!-- Category Tabs -->
        <div class="flex p-1 bg-gray-100/50 dark:bg-gray-800/50 rounded-xl w-full md:w-auto overflow-x-auto">
          <button class="filter-btn flex-1 md:flex-none px-6 py-2.5 rounded-lg text-sm font-semibold transition-all duration-200 bg-white dark:bg-gray-700 shadow-sm text-gray-900 dark:text-white ring-1 ring-black/5 dark:ring-white/10" data-filter="All">
            All
          </button>
          <button class="filter-btn flex-1 md:flex-none px-6 py-2.5 rounded-lg text-sm font-medium transition-all duration-200 text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white hover:bg-gray-50 dark:hover:bg-gray-700/50" data-filter="Literature">
            Literature
          </button>
          <button class="filter-btn flex-1 md:flex-none px-6 py-2.5 rounded-lg text-sm font-medium transition-all duration-200 text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white hover:bg-gray-50 dark:hover:bg-gray-700/50" data-filter="History">
            History
          </button>
          <button class="filter-btn flex-1 md:flex-none px-6 py-2.5 rounded-lg text-sm font-medium transition-all duration-200 text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white hover:bg-gray-50 dark:hover:bg-gray-700/50" data-filter="Other">
            Other
          </button>
        </div>

        <!-- Search Bar -->
        <div class="relative w-full md:w-72 group">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400 group-focus-within:text-purple-500 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <input 
            type="text" 
            id="search-input"
            class="block w-full pl-10 pr-4 py-2.5 bg-gray-50 dark:bg-gray-800 border-0 ring-1 ring-gray-200 dark:ring-gray-700 rounded-xl text-gray-900 dark:text-white placeholder-gray-500 focus:ring-2 focus:ring-purple-500 focus:bg-white dark:focus:bg-gray-900 transition-all duration-200"
            placeholder="Search title, author..." 
          />
        </div>
      </div>
    </div>

    <!-- Content Grid -->
    <div id="items-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 pb-20">
      <!-- Items injected by JS -->
    </div>

    <!-- Empty State -->
    <div id="no-results" class="hidden text-center py-20">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 dark:bg-gray-800 mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-1">No matches found</h3>
      <p class="text-gray-500 dark:text-gray-400">Try adjusting your search or filter to find what you're looking for.</p>
    </div>

  </div>
</BaseLayout>

<script>
  // Define types for better code clarity (even in vanilla JS context)
  const app = document.getElementById('reading-list-app');
  const itemsData = JSON.parse(app?.dataset.items || '[]');
  const grid = document.getElementById('items-grid');
  const searchInput = document.getElementById('search-input');
  const filterBtns = document.querySelectorAll('.filter-btn');
  const noResults = document.getElementById('no-results');

  let currentFilter = 'All';
  let searchQuery = '';

  function getIcon(item) {
    if (item.type === 'folder') {
      return `<svg class="w-8 h-8 text-yellow-500 drop-shadow-sm" fill="currentColor" viewBox="0 0 24 24"><path d="M20 6h-8l-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm0 12H4V8h16v10z"/></svg>`;
    }
    
    const ext = item.originalName ? item.originalName.split('.').pop().toLowerCase() : '';
    
    if (ext === 'pdf') {
      return `<svg class="w-8 h-8 text-red-500 drop-shadow-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 11v4m0 0h2m-2 0H9"></path></svg>`;
    } else if (['epub', 'mobi', 'azw3'].includes(ext)) {
      return `<svg class="w-8 h-8 text-emerald-600 drop-shadow-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>`;
    } else if (['txt', 'md'].includes(ext)) {
      return `<svg class="w-8 h-8 text-gray-500 drop-shadow-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>`;
    }
    
    return `<svg class="w-8 h-8 text-blue-400 drop-shadow-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>`;
  }

  function getCategoryColor(category) {
    switch(category) {
      case 'Literature': return 'bg-purple-100 text-purple-700 dark:bg-purple-500/20 dark:text-purple-300 border-purple-200 dark:border-purple-500/30';
      case 'History': return 'bg-blue-100 text-blue-700 dark:bg-blue-500/20 dark:text-blue-300 border-blue-200 dark:border-blue-500/30';
      case 'Other': return 'bg-emerald-100 text-emerald-700 dark:bg-emerald-500/20 dark:text-emerald-300 border-emerald-200 dark:border-emerald-500/30';
      default: return 'bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300';
    }
  }

  function render() {
    if (!grid) return;

    const filtered = itemsData.filter((item) => {
      const matchesFilter = currentFilter === 'All' || item.category === currentFilter;
      const matchesSearch = item.name.toLowerCase().includes(searchQuery.toLowerCase());
      return matchesFilter && matchesSearch;
    });

    grid.innerHTML = filtered.map((item, index) => {
      const isFolder = item.type === 'folder';
      const link = isFolder 
        ? `/recommendations/reader/${encodeURIComponent(item.originalName)}`
        : '#';
      
      const delay = index * 50; // Stagger animation

      return `
        <div class="group relative flex flex-col bg-white dark:bg-gray-900/80 backdrop-blur-sm border border-gray-200 dark:border-gray-800 rounded-2xl p-5 hover:shadow-2xl hover:shadow-purple-500/10 transition-all duration-300 hover:-translate-y-1 animate-fade-in-up" style="animation-delay: ${delay}ms">
          
          <!-- Decorative Background Gradient on Hover -->
          <div class="absolute inset-0 bg-gradient-to-br from-transparent via-transparent to-purple-500/5 dark:to-purple-500/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>

          <div class="flex items-start gap-4 z-10">
            <div class="flex-shrink-0 p-3 bg-gray-50 dark:bg-gray-800 rounded-2xl border border-gray-100 dark:border-gray-700 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300 shadow-sm">
              ${getIcon(item)}
            </div>
            
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 mb-2">
                <span class="text-[10px] uppercase tracking-wider font-bold px-2 py-0.5 rounded-full border ${getCategoryColor(item.category)}">
                  ${item.category}
                </span>
              </div>
              
              <h3 class="font-bold text-lg text-gray-900 dark:text-gray-100 leading-snug mb-2 line-clamp-2 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
                ${item.name}
              </h3>
              
              ${!isFolder ? `
                <div class="text-xs text-gray-400 dark:text-gray-500 font-mono truncate opacity-60 group-hover:opacity-100 transition-opacity">
                  ${item.originalName}
                </div>
              ` : ''}
            </div>
          </div>

          ${isFolder ? `
            <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-800 z-10">
              <a href="${link}" class="flex items-center justify-between w-full px-4 py-2 bg-gray-50 dark:bg-gray-800 hover:bg-purple-500 hover:text-white dark:hover:bg-purple-600 text-gray-600 dark:text-gray-300 rounded-xl transition-all duration-200 group/btn">
                <span class="text-sm font-medium">Read Collection</span>
                <div class="flex items-center gap-2">
                  <span class="text-xs opacity-70">${item.fileCount || 0} items</span>
                  <svg class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                </div>
              </a>
            </div>
          ` : ''}
        </div>
      `;
    }).join('');

    if (noResults) {
      if (filtered.length === 0) {
        noResults.classList.remove('hidden');
      } else {
        noResults.classList.add('hidden');
      }
    }
  }

  // Event Listeners
  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Update active state
      filterBtns.forEach(b => {
        b.classList.remove('bg-white', 'dark:bg-gray-700', 'shadow-sm', 'text-gray-900', 'dark:text-white', 'ring-1', 'ring-black/5', 'dark:ring-white/10');
        b.classList.add('text-gray-500', 'hover:text-gray-900', 'dark:text-gray-400', 'dark:hover:text-white', 'hover:bg-gray-50', 'dark:hover:bg-gray-700/50');
      });
      
      const target = btn;
      target.classList.remove('text-gray-500', 'hover:text-gray-900', 'dark:text-gray-400', 'dark:hover:text-white', 'hover:bg-gray-50', 'dark:hover:bg-gray-700/50');
      target.classList.add('bg-white', 'dark:bg-gray-700', 'shadow-sm', 'text-gray-900', 'dark:text-white', 'ring-1', 'ring-black/5', 'dark:ring-white/10');
      
      currentFilter = target.dataset.filter || 'All';
      render();
    });
  });

  searchInput?.addEventListener('input', (e) => {
    const target = e.target;
    searchQuery = target.value;
    render();
  });

  // Initial render
  render();
</script>

<style>
  @keyframes gradient-x {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  .animate-gradient-x {
    background-size: 200% 200%;
    animation: gradient-x 15s ease infinite;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fadeInUp 0.5s ease-out forwards;
    opacity: 0; /* Start hidden */
  }
</style>
