---
// Special page - disable the global easter egg
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>...</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        min-height: 100vh;
        background: linear-gradient(135deg, #0c0c1e 0%, #1a1a2e 50%, #16213e 100%);
        overflow: hidden;
        font-family: 'Georgia', serif;
      }

      #canvas {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
      }

      .message-container {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
        text-align: center;
        opacity: 0;
        animation: fadeInMessage 3s ease-out 1s forwards;
      }

      .message {
        font-size: clamp(1.5rem, 5vw, 3.5rem);
        font-weight: 300;
        letter-spacing: 0.1em;
        color: transparent;
        background: linear-gradient(135deg, #e8d5d5 0%, #f5e6e8 50%, #d4a5a5 100%);
        -webkit-background-clip: text;
        background-clip: text;
        text-shadow: 0 0 80px rgba(255, 182, 193, 0.3);
        animation: breathe 4s ease-in-out infinite;
      }

      .subtitle {
        margin-top: 1.5rem;
        font-size: clamp(0.8rem, 2vw, 1.1rem);
        color: rgba(255, 255, 255, 0.3);
        font-style: italic;
        letter-spacing: 0.2em;
        animation: subtitleFade 4s ease-in-out infinite alternate;
      }

      @keyframes fadeInMessage {
        0% {
          opacity: 0;
          transform: translate(-50%, -50%) scale(0.9);
        }
        100% {
          opacity: 1;
          transform: translate(-50%, -50%) scale(1);
        }
      }

      @keyframes breathe {
        0%, 100% {
          opacity: 0.8;
          filter: blur(0px);
        }
        50% {
          opacity: 1;
          filter: blur(0.5px);
        }
      }

      @keyframes subtitleFade {
        0% { opacity: 0.2; }
        100% { opacity: 0.5; }
      }

      /* Floating particles */
      .particle {
        position: fixed;
        width: 2px;
        height: 2px;
        background: rgba(255, 182, 193, 0.6);
        border-radius: 50%;
        pointer-events: none;
        z-index: 5;
      }
    </style>
  </head>
  <body>
    <canvas id="canvas"></canvas>

    <div class="message-container">
      <div class="message" id="love-message">I Love You, Aoqi</div>
      <div class="subtitle" id="love-subtitle">some words are meant to be kept in heart</div>
    </div>

    <script>
      // Randomize the name variant
      const nameVariants = ['Ngaochi', 'Oke', 'Alchi', 'Aoki', 'Ochi', 'Au Kei', 'Aoqi', 'O Kei'];
      const randomName = nameVariants[Math.floor(Math.random() * nameVariants.length)];
      document.getElementById('love-message').textContent = `I Love You, ${randomName}`;

      // Randomize the subtitle
      const subtitleVariants = ['Sentir sans dire.', 'Moonlight', 'some words are meant to be kept in heart'];
      const randomSubtitle = subtitleVariants[Math.floor(Math.random() * subtitleVariants.length)];
      document.getElementById('love-subtitle').textContent = randomSubtitle;
    </script>

    <script>
      const canvas = document.getElementById('canvas');
      const ctx = canvas.getContext('2d');

      let width, height;
      const fireworks = [];
      const particles = [];
      const floatingDots = [];

      // Color palette - muted, melancholic tones
      const colors = [
        { r: 255, g: 182, b: 193, a: 0.8 },  // Light pink
        { r: 176, g: 196, b: 222, a: 0.7 },  // Light steel blue
        { r: 230, g: 230, b: 250, a: 0.6 },  // Lavender
        { r: 255, g: 218, b: 185, a: 0.5 },  // Peach
        { r: 221, g: 160, b: 221, a: 0.4 },  // Plum
        { r: 173, g: 216, b: 230, a: 0.6 },  // Light blue
      ];

      function resize() {
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
      }

      window.addEventListener('resize', resize);
      resize();

      // Floating background dots
      class FloatingDot {
        constructor() {
          this.reset();
        }

        reset() {
          this.x = Math.random() * width;
          this.y = Math.random() * height;
          this.size = Math.random() * 2 + 0.5;
          this.speedY = -Math.random() * 0.3 - 0.1;
          this.speedX = (Math.random() - 0.5) * 0.2;
          this.opacity = Math.random() * 0.3 + 0.1;
          this.color = colors[Math.floor(Math.random() * colors.length)];
        }

        update() {
          this.y += this.speedY;
          this.x += this.speedX;
          this.opacity -= 0.0005;

          if (this.y < 0 || this.opacity <= 0) {
            this.reset();
            this.y = height + 10;
            this.opacity = Math.random() * 0.3 + 0.1;
          }
        }

        draw() {
          ctx.beginPath();
          ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
          ctx.fillStyle = `rgba(${this.color.r}, ${this.color.g}, ${this.color.b}, ${this.opacity})`;
          ctx.fill();
        }
      }

      // Firework class - gentle, not explosive
      class Firework {
        constructor(x, y, targetY) {
          this.x = x;
          this.y = y;
          this.targetY = targetY;
          this.speed = 2 + Math.random() * 1;
          this.color = colors[Math.floor(Math.random() * colors.length)];
          this.trail = [];
          this.exploded = false;
        }

        update() {
          this.trail.push({ x: this.x, y: this.y, opacity: 0.5 });
          if (this.trail.length > 10) this.trail.shift();

          this.y -= this.speed;
          this.x += (Math.random() - 0.5) * 0.5;

          if (this.y <= this.targetY) {
            this.explode();
            return false;
          }
          return true;
        }

        explode() {
          const particleCount = 30 + Math.floor(Math.random() * 20);
          for (let i = 0; i < particleCount; i++) {
            const angle = (Math.PI * 2 / particleCount) * i;
            const speed = 1 + Math.random() * 2;
            particles.push(new Particle(
              this.x,
              this.y,
              Math.cos(angle) * speed,
              Math.sin(angle) * speed,
              this.color
            ));
          }
        }

        draw() {
          // Draw trail
          this.trail.forEach((point, i) => {
            const opacity = (i / this.trail.length) * 0.3;
            ctx.beginPath();
            ctx.arc(point.x, point.y, 1.5, 0, Math.PI * 2);
            ctx.fillStyle = `rgba(${this.color.r}, ${this.color.g}, ${this.color.b}, ${opacity})`;
            ctx.fill();
          });

          // Draw firework
          ctx.beginPath();
          ctx.arc(this.x, this.y, 2, 0, Math.PI * 2);
          ctx.fillStyle = `rgba(${this.color.r}, ${this.color.g}, ${this.color.b}, 0.8)`;
          ctx.fill();
        }
      }

      // Particle class - soft, fading
      class Particle {
        constructor(x, y, vx, vy, color) {
          this.x = x;
          this.y = y;
          this.vx = vx;
          this.vy = vy;
          this.color = color;
          this.life = 1;
          this.decay = 0.008 + Math.random() * 0.008;
          this.size = 1.5 + Math.random() * 1;
        }

        update() {
          this.x += this.vx;
          this.y += this.vy;
          this.vy += 0.02; // Gentle gravity
          this.vx *= 0.99;
          this.vy *= 0.99;
          this.life -= this.decay;
          return this.life > 0;
        }

        draw() {
          ctx.beginPath();
          ctx.arc(this.x, this.y, this.size * this.life, 0, Math.PI * 2);
          ctx.fillStyle = `rgba(${this.color.r}, ${this.color.g}, ${this.color.b}, ${this.life * this.color.a})`;
          ctx.fill();
        }
      }

      // Initialize floating dots
      for (let i = 0; i < 50; i++) {
        floatingDots.push(new FloatingDot());
      }

      // Launch fireworks periodically - gentle, sparse
      function launchFirework() {
        const x = width * 0.2 + Math.random() * width * 0.6;
        const targetY = height * 0.2 + Math.random() * height * 0.3;
        fireworks.push(new Firework(x, height, targetY));
      }

      // Initial fireworks
      setTimeout(() => launchFirework(), 500);
      setTimeout(() => launchFirework(), 1200);
      setTimeout(() => launchFirework(), 2000);

      // Continue launching occasionally
      setInterval(() => {
        if (Math.random() > 0.3) {
          launchFirework();
        }
      }, 2500);

      function animate() {
        // Fade effect instead of clear
        ctx.fillStyle = 'rgba(12, 12, 30, 0.15)';
        ctx.fillRect(0, 0, width, height);

        // Update and draw floating dots
        floatingDots.forEach(dot => {
          dot.update();
          dot.draw();
        });

        // Update and draw fireworks
        for (let i = fireworks.length - 1; i >= 0; i--) {
          fireworks[i].draw();
          if (!fireworks[i].update()) {
            fireworks.splice(i, 1);
          }
        }

        // Update and draw particles
        for (let i = particles.length - 1; i >= 0; i--) {
          particles[i].draw();
          if (!particles[i].update()) {
            particles.splice(i, 1);
          }
        }

        requestAnimationFrame(animate);
      }

      animate();
    </script>
  </body>
</html>
