---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="ðŸ’•">
  <div id="love-container" class="fixed inset-0 flex items-center justify-center z-50">
    <div class="text-center animate-fade-in">
      <h1 class="text-5xl md:text-7xl font-bold text-pink-500 animate-pulse-love">
        I Love You, Aoqi!
      </h1>
      <div class="mt-8 text-6xl animate-bounce">ðŸ’•</div>
    </div>
  </div>

  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
        transform: scale(0.8);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    @keyframes pulse-love {
      0%, 100% {
        text-shadow: 0 0 20px rgba(236, 72, 153, 0.5);
      }
      50% {
        text-shadow: 0 0 40px rgba(236, 72, 153, 0.8), 0 0 60px rgba(236, 72, 153, 0.4);
      }
    }

    .animate-fade-in {
      animation: fade-in 0.8s ease-out forwards;
    }

    .animate-pulse-love {
      animation: pulse-love 2s ease-in-out infinite;
    }
  </style>

  <script>
    // Also trigger the heart rain
    setTimeout(() => {
      const event = new KeyboardEvent('keydown', { key: 'a' });
      document.dispatchEvent(event);
      document.dispatchEvent(new KeyboardEvent('keydown', { key: 'o' }));
      document.dispatchEvent(new KeyboardEvent('keydown', { key: 'q' }));
      document.dispatchEvent(new KeyboardEvent('keydown', { key: 'i' }));
    }, 500);
  </script>
</BaseLayout>
