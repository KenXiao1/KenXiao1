---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
    <h1 class="text-8xl font-bold text-gray-300 dark:text-gray-700">404</h1>
    <p class="text-xl text-gray-600 dark:text-gray-400 mt-4">
      Oops! The page you're looking for doesn't exist.
    </p>
    <a
      href="/"
      class="mt-8 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
    >
      Go Home
    </a>
  </div>

  <!-- Hidden easter egg in the corner -->
  <div
    id="secret-corner"
    class="fixed bottom-2 right-2 w-3 h-3 opacity-5 cursor-default select-none"
    title=" "
  >
    <span class="text-[8px]">â™¡</span>
  </div>

  <script>
    const corner = document.getElementById('secret-corner');
    let clickCount = 0;
    let clickTimer: ReturnType<typeof setTimeout>;

    corner?.addEventListener('click', () => {
      clickCount++;
      clearTimeout(clickTimer);

      if (clickCount >= 5) {
        // Trigger the easter egg after 5 clicks
        window.dispatchEvent(new KeyboardEvent('keydown', { key: 'a' }));
        window.dispatchEvent(new KeyboardEvent('keydown', { key: 'o' }));
        window.dispatchEvent(new KeyboardEvent('keydown', { key: 'q' }));
        window.dispatchEvent(new KeyboardEvent('keydown', { key: 'i' }));
        clickCount = 0;
      } else {
        // Reset after 2 seconds of no clicks
        clickTimer = setTimeout(() => {
          clickCount = 0;
        }, 2000);
      }
    });
  </script>
</BaseLayout>
