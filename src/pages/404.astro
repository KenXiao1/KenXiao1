---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
    <h1 class="text-8xl font-bold text-gray-300 dark:text-gray-700">404</h1>
    <p class="text-xl text-gray-600 dark:text-gray-400 mt-4">
      Oops! The page you're looking for doesn't exist.
    </p>
    <a
      href="/"
      class="mt-8 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
    >
      Go Home
    </a>
  </div>

  <!-- White Moonlight - 白月光 -->
  <div id="moonlight">
    <div class="moon-glow"></div>
    <div class="moon"></div>
  </div>

  <style>
    #moonlight {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      cursor: pointer;
      z-index: 100;
      transition: transform 0.5s ease;
    }

    #moonlight:hover {
      transform: scale(1.15);
    }

    .moon {
      width: 48px;
      height: 48px;
      background: radial-gradient(circle at 30% 30%, #fffef0 0%, #f5f5dc 50%, #e8e4d4 100%);
      border-radius: 50%;
      box-shadow:
        0 0 25px rgba(255, 255, 240, 0.5),
        0 0 50px rgba(255, 255, 240, 0.3),
        0 0 75px rgba(255, 255, 240, 0.15);
      position: relative;
      z-index: 2;
      animation: moonFloat 6s ease-in-out infinite;
    }

    .moon-glow {
      position: absolute;
      width: 100px;
      height: 100px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: radial-gradient(circle, rgba(255, 255, 240, 0.2) 0%, transparent 70%);
      border-radius: 50%;
      z-index: 1;
      animation: glowPulse 4s ease-in-out infinite;
    }

    @keyframes moonFloat {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-8px); }
    }

    @keyframes glowPulse {
      0%, 100% { opacity: 0.5; transform: translate(-50%, -50%) scale(1); }
      50% { opacity: 1; transform: translate(-50%, -50%) scale(1.2); }
    }

    :global(.dark) .moon {
      box-shadow:
        0 0 40px rgba(255, 255, 240, 0.6),
        0 0 80px rgba(255, 255, 240, 0.4),
        0 0 120px rgba(255, 255, 240, 0.2);
    }

    :global(.dark) .moon-glow {
      background: radial-gradient(circle, rgba(255, 255, 240, 0.35) 0%, transparent 70%);
    }
  </style>

  <script>
    const moon = document.getElementById('moonlight');

    moon?.addEventListener('click', () => {
      // Trigger the firework easter egg
      document.dispatchEvent(new KeyboardEvent('keydown', { key: 'a' }));
      document.dispatchEvent(new KeyboardEvent('keydown', { key: 'o' }));
      document.dispatchEvent(new KeyboardEvent('keydown', { key: 'q' }));
      document.dispatchEvent(new KeyboardEvent('keydown', { key: 'i' }));
    });
  </script>
</BaseLayout>
