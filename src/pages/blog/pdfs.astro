---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import PDFThumbnail from '../../components/PDFThumbnail';
import LikeButton from '../../components/LikeButton';

const pdfs = (await getCollection('pdfs'))
  .sort((a, b) => b.data.uploadDate.valueOf() - a.data.uploadDate.valueOf());

const categories = [...new Set(pdfs.map(pdf => pdf.data.category))];
---

<BaseLayout title="Ken Xiao | PDF Library">
  <div class="max-w-5xl mx-auto">
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-4xl font-serif font-bold">PDF Library</h1>
      
      <div class="flex bg-gray-100 dark:bg-gray-900 p-1 rounded-lg">
        <a href="/blog" class="px-4 py-2 text-gray-500 hover:text-gray-900 dark:hover:text-gray-300 rounded-md text-sm font-medium transition-all">Articles</a>
        <a href="/blog/pdfs" class="px-4 py-2 bg-white dark:bg-gray-800 shadow-sm rounded-md text-sm font-medium transition-all">PDF Library</a>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {pdfs.map(pdf => (
        <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl overflow-hidden hover:border-accent transition-colors group">
          <PDFThumbnail filename={pdf.data.filename} title={pdf.data.title} client:load />

          <div class="p-4">
            <div class="text-xs text-accent uppercase tracking-wider font-bold mb-1">{pdf.data.category}</div>
            <h3 class="font-bold text-lg mb-2 line-clamp-1" title={pdf.data.title}>{pdf.data.title}</h3>
            <p class="text-sm text-gray-500 line-clamp-2 mb-4">{pdf.data.description}</p>

            <div class="flex items-center justify-between">
              <div class="text-xs text-gray-400 font-mono">
                {pdf.data.uploadDate.toLocaleDateString()}
              </div>
              <LikeButton
                contentType="pdf"
                contentId={pdf.id}
                client:load
              />
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
